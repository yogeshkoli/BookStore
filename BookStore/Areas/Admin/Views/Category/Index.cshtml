@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>

<div class="mt-3">
    <table class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th style="width: 20%;">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                     <td>
                        @category.DisplayOrder
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Category" class="btn btn-primary mx-2" asp-action="Edit" asp-route-id="@category.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Category" class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@category.Id"><i class="bi bi-archive"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>  
</div>